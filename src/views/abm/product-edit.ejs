    <main>
        

        <div class="abm-main-encabezado">
            <h1>ALTA de producto </h1> <div><i class="fa-solid fa-upload"></i></div> 
        </div>
        <div class="main-subEncabezado">
            <p>Ingresar <strong>todos</strong> los campos para dar de alta un nuevo producto</p>
        </div>
    
        <section class="abm-main-formulario-borde">
            <form action="/products/edit/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data" >
                
                <!-- Nombre del producto -->
                <div class="form-group">
                    <div class="abm-form-group__ancho-label">
                        <label for="nombreProducto">Nombre del producto</label>
                    </div> 
                    <div class="abm-form-group__inputField">
                        <input value="<%= product.name %> " class="form-group__ancho-input" type="text" name="name" id="" placeholder="ej. Alimento mix balanceado">        
                    </div>
                </div>
                
                <!-- Marca de producto -->
                <div class="form-group">
                    <div class="abm-form-group__ancho-label">
                        <label for="marcaProducto">Marca</label>
                    </div>
                    <div class="abm-form-group__inputField">
                        <input value="<%= product.brand %> " class="form-group__ancho-input" type="text" name="brand" id="" placeholder="ej. Royal Canin">        
                    </div>
                </div>
                
                <!-- Precio -->
                <div class="form-group">
                    <div class="abm-form-group__ancho-label">
                        <label for="precioProducto">Precio</label>
                    </div>
                    <div class="abm-form-group__inputField">
                        <input value="<%= product.price %> " class="form-group__ancho-input-corto" type="text" name="price" id="" placeholder="ej. 5300">        
                    </div>
                </div>

                <!-- Descripción del producto -->
                <div class="form-group">
                    <div class="abm-form-group__ancho-label">
                        <label for="detalleProducto">Descripción</label>
                    </div>
                    <div class="abm-form-group__inputField">
                        <textarea  class="abmAlta__text-area" name="description" id="" cols="30" rows="10" placeholder="ej. El alimento mix balanceado... "><%= product.description %> </textarea>
                    </div>
                </div>
                
                <!-- Codigo de producto y kilos -->
                <div class="form-group">
                    <div class="abm-form-group__ancho-label">
                        <label for="infoNutriProducto">Codigo y kilos</label>
                    </div>
                    <div class="abm-form-group__inputField">
                        <textarea class="abmAlta__text-area" name="codigo" id="" cols="30" rows="10" placeholder="ej. Trigo, maíz, germen de maíz, harinas de soja, ... "><%= product.codigo %> </textarea>
                    </div>
                </div>

                <!-- categoria -->
                <div class="form-group">
                    <div class="abm-form-group__ancho-label">
                        <label for="category" class="form-label">Categoría:</label>
                    </div>
                    <select class="abm-form-group__inputField abm-form-group__select " name="category" id="category" >
                        <option value="perro">Perro</option>
                        <option value="gato">Gato</option>
                    </select>
                </div>
                
                <!-- Imagen del producto -->
                <div class="form-group">
                    <div class="abm-form-group__ancho-label">
                        <label for="imagenProducto">Imagen: .jpp o .png</label>
                    </div>
                    <div class="abm-form-group__inputField">
                        <input class="abm-form-group__file" type="file"  name="product-img" accept=".jpg, .png" >        
                    </div>
                </div>
                
              
                
                <div class="form-group">
                    <div class="abm-form-group__ancho-label">
                        <label for=""></label>
                    </div>
                    <div class="abm-form-group__inputField">
                        <button class="boton-submit boton-enviar" type="submit">Editar Producto</button> 
                        <button class="boton-submit" type="reset">Resetear Campos </button>
        </form>            
                        <form class="segundo-formulario"  action="/products/delete/<%= product.id %>?_method=DELETE"  method="POST">
                
